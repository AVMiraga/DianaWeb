@using WebApplication2.Models.ViewModel
@model LoginVm

<div class="container">
<form method="post">
    <div class="form-outline mb-4">
        <input asp-for="LoginId" class="form-control" />
        <label asp-for="LoginId" >Email address or Username</label>
    </div>

    <div class="form-outline mb-4">
        <input type="password" asp-for="Password" class="form-control" />
        <label class="form-label" asp-for="Password">Password</label>
    </div>

    <div class="row mb-4">
        <div class="col d-flex justify-content-center">
            <div class="form-check">
                <input class="form-check-input" asp-for="RememberMe"/>
                <label class="form-check-label" asp-for="RememberMe"> Remember me </label>
            </div>
        </div>

        <div class="col">
            <a href="#!">Forgot password?</a>
        </div>
    </div>

    <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>
</form>
</div>