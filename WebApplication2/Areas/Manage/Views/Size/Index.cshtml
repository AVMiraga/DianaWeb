@model List<Size>

@{
    int count = 0;
}

<div class="table-responsive pt-3 mx-auto">
    <h2 class="text-center">Size List</h2>
    <a class="btn btn-primary" asp-action="CreateSize">Create Size</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    Name
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="DeleteSize" asp-route-id="@item.Id">Delete</a>
                        <a class="btn btn-warning" asp-action="UpdateSize" asp-route-id="@item.Id">Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>