@model CreateProductVm

<div class="container">
	<div class="row">
		<div class="grid-margin">
			<form class="forms-sample" method="post">
				<div class="form-group">
					<label asp-for="Name">Name</label>
					<input asp-for="Name" type="text" class="form-control" id="exampleInputUsername1"
						   placeholder="Name">
				</div>
				<div class="form-group">
					<label asp-for="Price">Price</label>
					<input asp-for="Price" type="text" class="form-control" id="exampleInputUsername1"
						   placeholder="Price">
				</div>
				<div class="form-group">
					<label asp-for="Description">Description</label>
					<input asp-for="Description" type="text" class="form-control" id="exampleInputUsername1"
						   placeholder="Description">
				</div>
				<div class="form-group">
					<select asp-items="@(new SelectList(ViewBag.Category, nameof(Category.Id), nameof(Category.Name)))">
					</select>
				</div>
				<div class="form-group">
					<select asp-items="@(new SelectList(ViewBag.Size, nameof(Size.Id), nameof(Size.Name)))">
					</select>
				</div>
				<div class="form-group">
					<select asp-items="@(new SelectList(ViewBag.Material, nameof(Material.Id), nameof(Material.Name)))">
					</select>
				</div>
				<div class="form-group">
					<select asp-items="@(new SelectList(ViewBag.Color, nameof(Color.Id), nameof(Color.Name)))">
					</select>
				</div>
				
				<button type="submit" class="btn btn-primary me-2">Submit</button>
				<button class="btn btn-light" asp-action="index">Cancel</button>
			</form>
		</div>
	</div>
</div>