@model UpdateSliderVm

<div class="container">
    <div class="row">
        <div class="grid-margin">
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" type="text" class="form-control">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Subtitle">Subtitle</label>
                    <input asp-for="Subtitle" type="text" class="form-control">
                    <span asp-validation-for="Subtitle" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Image">Image</label>
                    <input asp-for="Image" class="form-control">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <div class="container">
                    <label>Current Slider Image</label>
                    <img src="~/Upload/@Model.ImageUrl"/>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light" asp-action="index">Cancel</button>
            </form>
        </div>
    </div>
</div>